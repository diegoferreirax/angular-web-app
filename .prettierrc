{
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "printWidth": 60
      }
    },
    {
      "files": "*.scss",
      "options": {
        "printWidth": 80
      }
    }
  ],
  "htmlWhitespaceSensitivity": "ignore"
}
